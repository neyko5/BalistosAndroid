<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="playlist"
            type="com.balistos.balistos.network.Playlist" />
        <variable
                name="position"
                type="String" />
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:id="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="4dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="4dp" android:layout_marginBottom="2dp">
            <TextView
                    android:id="@+id/playlistIndex"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:gravity="center"

                    app:text="@{position}"
                    tools:text="1"/>
        </LinearLayout>

        <TextView
                android:id="@+id/playlistTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:gravity="center"
                app:text="@{playlist.title}"
                tools:text="Titleroo"
                android:layout_marginTop="2dp" app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                android:layout_marginBottom="2dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="20dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"/>
    </RelativeLayout>

</layout>
